{
  "name": "global-hook-store",
  "version": "0.3.3",
  "description": "A React hook for using global store with hooks",
  "main": "lib/index.js",
  "homepage": "https://github.com/richarddd/global-hook-store#readme",
  "resolutions": {
    "lodash": "4.17.15"
  },
  "scripts": {
    "build": "yarn && rm -rf ./lib/* && ./node_modules/.bin/tslint --project '.' && ./node_modules/.bin/tsc --strictNullChecks",
    "watch": "yarn && ./node_modules/.bin/tsc --strictNullChecks --watch",
    "publish": "npm publish",
    "precopy": "yarn build",
    "copy": "cp ./lib/* example/node_modules/global-hook-store/lib/",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn build && yarn test && if [[ $(git diff | head -c1 | wc -c) -ne 0 ]]; then printf \"\\e[31;4;1mERROR: \\\"git diff\\\" was not empty, please commit build dir\\e[0m \" && echo \"\" && exit 1; fi && echo \"Build dir commited\""
    }
  },
  "keywords": [
    "global store",
    "hooks",
    "react-hooks",
    "react",
    "global-hook-store"
  ],
  "author": "Richard Davison",
  "license": "ISC",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.1",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^3.0.3",
    "jest": "24.8.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/runtime": "^7.5.5",
    "react": "^16.9.0",
    "react-dom": "16.9.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests-setup.js"
    ],
    "verbose": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)(spec|test).(ts|js)?(x)"
    ]
  }
}
